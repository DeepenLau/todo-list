.toolbar
  display flex
  font-size 14px
  color #777
  align-items center
  justify-content space-between
  padding 10px 20px
  background #fff
  .filter
    span
      border 1px solid #fff
      padding 5px 10px
      margin 0 4px
      border-radius 4px
      cursor pointer
      &.active
        border-color #EAD7D7

  .clear
    cursor pointer
