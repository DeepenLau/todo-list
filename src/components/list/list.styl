.list-wrap
  width 100%
  background: #fff
  font-size 30px

  li.item
    height 80px
    line-height @height
    text-align left
    // padding-left 60px
    list-style none
    border-bottom: 1px solid #ededed;
    border-top: 1px solid #ededed;
    display flex
    align-items center
    justify-content space-between
    padding 0 20px
    &.done
      .dot
        background: #23D18B
      .value
        text-decoration: line-through
        color #999

  .dot
    width 30px
    height @width
    border 5px solid #EDEDED
    border-radius 50%
    margin-right 20px
    cursor: pointer

  .value
    position relative
    font-size 20px
    flex-grow 1

  .delete
    color #EAD7D7
    transform rotate(45deg)
    cursor: pointer

  input
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    font-size 20px
    display none
    &.editing
      display block
