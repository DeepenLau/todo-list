// .input-wrap


.input-wrap
  position relative
  width 100%
  background: rgba(0, 0, 0, 0.003);
  box-shadow: inset 0 -2px 1px rgba(0,0,0,0.03);

  input
    padding: 16px 16px 16px 60px
    width 100%
    height 100%
    border none
    outline none
    background #fff
    font-size 30px

  .selectAll
    position absolute
    top 50%
    left 29px
    width 10px
    height @width
    // background red
    transform translateY(-50%) rotate(45deg)
    border-right 1px solid #ccc
    border-bottom 1px solid #ccc
    cursor pointer
    &.all
      border-color #333