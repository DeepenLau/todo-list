*
  margin 0
  padding 0
  box-sizing border-box

body {
  background: #f5f5f5
}

#app
  font: 14px 'Helvetica Neue', Helvetica, Arial, sans-serif
  line-height: 1.4em
  /* background: #f5f5f5 */
  color: #4d4d4d
  min-width: 230px
  width: 550px
  max-width: 550px
  margin: 0 auto
  text-align: center

  h1
    font-size: 100px
    height 100px
    line-height @height
    font-weight: 100
    text-align: center
    color: rgba(175, 47, 47, 0.15)
    -webkit-text-rendering: optimizeLegibility
    -moz-text-rendering: optimizeLegibility
    text-rendering: optimizeLegibility
